generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  PENDENTE
  EM_ANDAMENTO
  CONCLUIDA
}

enum Priority {
  BAIXA
  MEDIA
  ALTA
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      Status    @default(PENDENTE) // Agora corresponde ao enum Status
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  // NOVOS CAMPOS
  priority    Priority  @default(MEDIA)
  dueDate     DateTime?
}